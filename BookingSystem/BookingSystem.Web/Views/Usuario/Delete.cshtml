@model BookingSystem.Domain.Entities.Usuario

<h1>Eliminar Usuario</h1>

<div>
    <h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
    <div>
        <h4>Detalles del Usuario</h4>
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Teléfono:</strong> @Model.Telefono</p>
        <p><strong>Es Administrador:</strong> @(Model.EsAdministrador ? "Sí" : "No")</p>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
