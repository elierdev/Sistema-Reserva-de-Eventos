@model BookingSystem.Domain.Entities.Espacio

@{
    ViewBag.Title = "Eliminar Espacio";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Eliminar Espacio</h4>
        </div>
        <div class="card-body">
            <h5 class="text-center mb-4">¿Está seguro de que desea eliminar este espacio?</h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Nombre</th>
                            <td>@Html.DisplayFor(model => model.Nombre)</td>
                        </tr>
                        <tr>
                            <th>Descripción</th>
                            <td>@Html.DisplayFor(model => model.Descripcion)</td>
                        </tr>
                        <tr>
                            <th>Capacidad</th>
                            <td>@Html.DisplayFor(model => model.Capacidad)</td>
                        </tr>
                        <tr>
                            <th>Precio por Hora</th>
                            <td>@Html.DisplayFor(model => model.PrecioPorHora)</td>
                        </tr>
                        <tr>
                            <th>Disponible</th>
                            <td>@(Model.Disponible ? "Sí" : "No")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="DeleteConfirmed" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</div>
