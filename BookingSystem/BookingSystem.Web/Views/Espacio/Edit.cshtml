@model BookingSystem.Domain.Entities.Espacio

@{
    ViewBag.Title = "Editar Espacio";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Editar Espacio</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacidad" class="form-label fw-bold"></label>
                    <input asp-for="Capacidad" type="number" class="form-control" />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PrecioPorHora" class="form-label fw-bold"></label>
                    <input asp-for="PrecioPorHora" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="PrecioPorHora" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Disponible" type="checkbox" class="form-check-input" id="Disponible" />
                    <label asp-for="Disponible" class="form-check-label fw-bold" for="Disponible">Disponible</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
