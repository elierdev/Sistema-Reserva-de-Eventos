@model IEnumerable<BookingSystem.Domain.Entities.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fw-bold">Usuarios</h1>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Es Administrador</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.Id</td>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.Email</td>
                                <td>@usuario.Telefono</td>
                                <td>@(usuario.EsAdministrador ? "Sí" : "No")</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
