@model IEnumerable<BookingSystem.Domain.Entities.Servicio>

@{
    ViewBag.Title = "Servicios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fw-bold">Servicios</h1>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Servicio</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Disponible</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var servicio in Model)
                        {
                            <tr>
                                <td>@servicio.Id</td>
                                <td>@servicio.Nombre</td>
                                <td>@servicio.Descripcion</td>
                                <td>@servicio.Precio.ToString("C")</td>
                                <td>@(servicio.Disponible ? "Sí" : "No")</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@servicio.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@servicio.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
