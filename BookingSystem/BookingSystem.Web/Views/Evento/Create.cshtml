@model BookingSystem.Domain.Entities.Evento

@{
    ViewBag.Title = "Crear Evento";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Crear Nuevo Evento</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
                    <input asp-for="FechaInicio" type="datetime-local" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaFin" class="form-label">Fecha de Fin</label>
                    <input asp-for="FechaFin" type="datetime-local" class="form-control" />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>

                

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">Crear</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
