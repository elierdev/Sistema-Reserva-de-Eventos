@model List<BookingSystem.Domain.Entities.Reserva>

@{
    ViewBag.Title = "Reservas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fw-bold">Reservas</h1>
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Reserva</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Usuario ID</th>
                            <th>Evento ID</th>
                            <th>Espacio ID</th>
                            <th>Fecha de Reserva</th>
                            <th>Costo Total</th>
                            <th>Confirmada</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var reserva in Model)
                            {
                                <tr>
                                    <td>@reserva.Id</td>
                                    <td>@reserva.UsuarioId</td>
                                    <td>@reserva.EventoId</td>
                                    <td>@reserva.EspacioId</td>
                                    <td>@reserva.FechaReserva.ToString("g")</td>
                                    <td>@reserva.CostoTotal.ToString("C")</td>
                                    <td>@reserva.Confirmada ? "Sí" : "No"</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@reserva.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                                        <a asp-action="Delete" asp-route-id="@reserva.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">No hay reservas disponibles.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
