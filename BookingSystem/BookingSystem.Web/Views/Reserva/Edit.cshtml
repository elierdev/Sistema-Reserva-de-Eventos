@model BookingSystem.Domain.Entities.Reserva
@{
    ViewBag.Title = "Editar Reserva";
}
<div class="container mt-4">
    <h2 class="mb-4">Editar Reserva</h2>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="UsuarioId" class="form-label"></label>
                    <input asp-for="UsuarioId" class="form-control" />
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EventoId" class="form-label"></label>
                    <input asp-for="EventoId" class="form-control" />
                    <span asp-validation-for="EventoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EspacioId" class="form-label"></label>
                    <input asp-for="EspacioId" class="form-control" />
                    <span asp-validation-for="EspacioId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiciosIds" class="form-label"></label>
                    <input asp-for="ServiciosIds" class="form-control" placeholder="IDs de servicios separados por comas" />
                    <span asp-validation-for="ServiciosIds" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaReserva" class="form-label"></label>
                    <input asp-for="FechaReserva" type="datetime-local" class="form-control" />
                    <span asp-validation-for="FechaReserva" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CostoTotal" class="form-label"></label>
                    <input asp-for="CostoTotal" class="form-control" />
                    <span asp-validation-for="CostoTotal" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input asp-for="Confirmada" class="form-check-input" type="checkbox" />
                    <label asp-for="Confirmada" class="form-check-label">Confirmada</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
