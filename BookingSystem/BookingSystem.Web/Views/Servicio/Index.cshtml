@model IEnumerable<BookingSystem.Domain.Entities.Servicio>

<h1>Servicios</h1>

<a asp-action="Create" class="btn btn-primary">Crear Nuevo Servicio</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Disponible</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model)
        {
            <tr>
                <td>@servicio.Id</td>
                <td>@servicio.Nombre</td>
                <td>@servicio.Descripcion</td>
                <td>@servicio.Precio.ToString("C")</td>
                <td>@(servicio.Disponible ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@servicio.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@servicio.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
